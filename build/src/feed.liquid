---
  permalink: feed.xml
  eleventyExcludeFromCollections: true
  metadata:
    title: "Take A Chisel"
    description: "Hi, this is my blog. There's mostly stuff around web development, and other reflections on work I do for my business Blackman Rossouw."
    author: "Chad Rossouw"
---
<?xml version="1.0" encoding="UTF-8"?>
    <rss version="2.0"
    xmlns:content="http://purl.org/rss/1.0/modules/content/"
	xmlns:wfw="http://wellformedweb.org/CommentAPI/"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
	xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
    >
    <channel>
        <title>{{metadata.title}}</title>
        <link>{{environment.url}}</link>
        <atom:link href="{{environment.url}}feed.xml" rel="self" type="application/rss+xml" />
        <description>{{metadata.description}}</description>
        <lastBuildDate>{{post.posts[0].date | dateToRFC822}}</lastBuildDate>
        <language>en-UK</language>
        <image>
            <url>{{environment.url}}assets/images/icon.svg</url>
            <title>Take A Chisel</title>
            <link>{{environment.url}}</link>
            <width>32</width>
            <height>32</height>
        </image> 
        {% for post in post.posts %}
            <item>
                <title>{{post.title}}</title>
                <link>{{environment.url}}post/{{ post.slug }}.html</link>
                <description><![CDATA[{{post.excerpt}}]]></description>
                <content:encoded><![CDATA[{{post.content}}]]></content:encoded>
                <pubDate>{{ post.date | dateToRFC822 }}</pubDate>
                <guid>{{environment.url}}/post/{{ post.slug }}.html</guid>
                <dc:creator>{{metadata.author}}</dc:creator>
            </item>
        {% endfor %}
    </channel>
</rss>
